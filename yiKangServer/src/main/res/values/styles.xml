<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on Api level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer Api levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular Api-level can go here. -->
    </style>


    <style name="style_common_btn">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/selector_btn_bg_theme</item>
    </style>


    <style name="custom_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 设置window背景透明，也就是去边框 -->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="CustomProgressDialog" parent="@style/custom_dialog">
        <item name="android:windowNoTitle">true</item>
    </style>


    <!-- 主页我的患者 linearlayout-->
    <style name="style_business_item" parent="@style/style_ly_option_item">
        <item name="android:background">@drawable/selector_bg_blue_blue</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingLeft">20dp</item>
    </style>

    <style name="style_ly_option_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/selector_bg_option_item</item>
    </style>


    <style name="style_mine_item" parent="@style/style_ly_option_item">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:background">@color/white</item>
    </style>


    <style name="style_service_detail_item" parent="@style/style_ly_option_item">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:background">@color/white</item>
    </style>


    <!-- 我的资料上方 textview-->
    <style name="style_countInfo_base_text_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxEms">8</item>
    </style>


    <!--我的资料下方 textview-->
    <style name="style_common_option_item_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="style_countInfo_item_text" parent="@style/style_common_option_item_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">left</item>
    </style>


    <style name="style_business_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">23sp</item>
    </style>

    <!-- 服务日程点进去后订单详情-->
    <style name="style_service_detail_text_hint">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="style_service_detail_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="style_window_slow_up_down">
        <item name="android:windowEnterAnimation">@anim/slow_up</item>
        <item name="android:windowExitAnimation">@anim/slow_down</item>
    </style>


    <style name="style_simple_popWindow_anim">
        <item name="android:windowEnterAnimation">@anim/pop_show_anim</item>
        <item name="android:windowExitAnimation">@anim/pop_hide_anim</item>
    </style>

    <!-- 加载滚动条样式 -->
    <style name="loading">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/progressloading</item>
        <item name="android:indeterminateDuration">1000</item>
        <item name="android:indeterminateOnly">true</item>
    </style>

    <!-- 订单管理里面-->
    <style name="common_item_text">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:drawablePadding">5dp</item>
    </style>

    <style name="item_order_user">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
