<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:divider="@drawable/line_grey_horizontal"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:showDividers="middle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="3dp"
        android:paddingBottom="3dp">

        <TextView
            style="@style/common_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预约单时间:" />

        <TextView
            style="@style/common_item_text"
            android:id="@+id/tv_appointment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/common_item_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预约单编号:" />

            <TextView
                style="@style/common_item_text"
                android:id="@+id/tv_appointment_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <LinearLayout
            style="@style/item_order_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/common_item_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务名称:" />

            <TextView
                style="@style/common_item_text"
                android:id="@+id/tv_appointment_service_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <LinearLayout
            style="@style/item_order_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/common_item_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户名:" />


            <TextView
                style="@style/common_item_text"
                android:id="@+id/tv_appointment_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>



        <LinearLayout
            style="@style/item_order_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/common_item_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="备注:" />


            <TextView
                style="@style/common_item_text"
                android:id="@+id/tv_appointment_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <LinearLayout
            style="@style/item_order_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/common_item_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付金额:" />

            <TextView
                style="@style/common_item_text"
                android:id="@+id/tv_appointment_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>