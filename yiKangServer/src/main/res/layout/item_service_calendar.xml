<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
	android:padding="10dp"
	android:gravity="center_vertical"
    android:orientation="vertical" 
    android:background="@drawable/shap_themecolor_reactangle_solid">
    
    <TextView 
        android:id="@+id/tv_service_carlendar_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:text=""/>
    
    <TextView
        android:id="@+id/tv_service_carlendar_date" 
        android:layout_toRightOf="@id/tv_service_carlendar_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textColor="@color/white"
        android:text=""
        android:textSize="20sp"/>
    
    <TextView 
        android:id="@+id/tv_service_carlendar_addr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_service_carlendar_name"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/ic_addr_white"
        android:text=""
        android:textSize="19sp"/>

    <View
        android:id="@+id/view_service_carlendar_badge"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignBottom="@+id/tv_service_carlendar_date"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:background="@drawable/red_dot" />
    
</RelativeLayout>
